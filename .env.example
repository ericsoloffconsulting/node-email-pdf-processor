# IMAP Email Server Configuration
# Most email providers use these settings:
# Gmail: imap.gmail.com:993 (requires App Password if 2FA enabled)
# Outlook: outlook.office365.com:993
# Yahoo: imap.mail.yahoo.com:993
# iCloud: imap.mail.me.com:993

IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=your-email@gmail.com
IMAP_PASSWORD=your-app-password
IMAP_TLS=true
IMAP_MAILBOX=INBOX

# Search criteria for emails to process
# UNSEEN = only unread emails
# ALL = all emails (use with caution!)
# You can also use: SEEN, FLAGGED, UNFLAGGED, etc.
SEARCH_CRITERIA=UNSEEN

# Claude API Configuration
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Claude model to use for PDF processing
# Options:
#   claude-opus-4-5-20251101      (most capable, highest cost)
#   claude-sonnet-4-5-20250929    (balanced, recommended)
#   claude-haiku-4-5-20251001     (fastest, lowest cost)
CLAUDE_MODEL=claude-haiku-4-5-20251001

# Maximum tokens for Claude response
CLAUDE_MAX_TOKENS=4096

# Polling Configuration
# How often to check for new emails (in milliseconds)
# 60000 = 1 minute, 300000 = 5 minutes
POLL_INTERVAL_MS=300000

# Whether to mark processed emails as read
MARK_AS_READ=true

# Output Configuration
# Whether to save processed PDFs to disk
SAVE_PDFS=false
OUTPUT_DIR=./processed-pdfs

# Whether to save Claude's analysis results to disk
SAVE_RESULTS=false
RESULTS_DIR=./results

# ============================================================================
# NetSuite Integration Configuration
# ============================================================================

# Enable/disable NetSuite uploads
NETSUITE_ENABLED=true

# NetSuite RESTlet URL
NETSUITE_RESTLET_URL=https://YOUR_ACCOUNT.restlets.api.netsuite.com/app/site/hosting/restlet.nl?script=XXX&deploy=1

# NetSuite Account ID
NETSUITE_ACCOUNT_ID=YOUR_ACCOUNT_ID

# NetSuite OAuth 1.0a Credentials (Token-Based Authentication)
NETSUITE_CONSUMER_KEY=your_consumer_key
NETSUITE_CONSUMER_SECRET=your_consumer_secret
NETSUITE_TOKEN_ID=your_token_id
NETSUITE_TOKEN_SECRET=your_token_secret

# Default NetSuite Folder IDs (fallback if processor doesn't specify)
NETSUITE_PDF_FOLDER_ID=12345
NETSUITE_JSON_FOLDER_ID=12346

# ============================================================================
# Email Processor Configurations
# Define different email types and their routing to NetSuite folders
# ============================================================================

# MARCONE CREDIT MEMOS
MARCONE_ENABLED=true
MARCONE_PDF_FOLDER_ID=12345    # NetSuite folder for Marcone PDFs
MARCONE_JSON_FOLDER_ID=12346   # NetSuite folder for Marcone JSON

